<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>

  <div class="container">
      	<div class="row">
	      <p><% if (theme.hostedby.enable){ %>
  		   	 Hosted by <a href="<%- theme.hostedby.hostedby_url %>" target="_blank"><%- theme.hostedby.hostedby_name %></a>
  		  <% } %> <% if (theme.ICP.enable){ %>
  		   	 <% if (theme.hostedby.enable && theme.ICP.enable ){ %> * <% } %><a href="<%- theme.ICP.ICP_url %>" target="_blank" title="<%- theme.ICP.ICP_text %>"><%- theme.ICP.ICP_license %></a>
  		  <% } %> </p>
	      <p id="copyRightEn">&copy; <%= theme.since ||  (date(new Date(), 'YYYY')-1)%> - <%= date(new Date(), 'YYYY') %> <a href="<%- config.root %>"><%= config.title || config.author %></a> * <%= __('powered_by') %> <a href="https://github.com/iTimeTraveler/hexo-theme-hiker" target="_blank">hiker</a></p>

	      <% if (theme.show_busuanzi_view_counts){ %>
    		<p class="busuanzi_uv">
				<%= __('site_uv') %> : <span id="busuanzi_value_site_uv"></span> |  
				<%= __('site_pv') %> : <span id="busuanzi_value_site_pv"></span>
		    </p>
  		   <% } else { %>
  		   	<p id="copyRightCn"><%= __('right_reserved', config.author || config.title) %></p>
  		   <% } %>
		</div>

		
  </div>
</footer>


<!-- min height -->

<script>
    var wrapdiv = document.getElementById("wrap");
    var contentdiv = document.getElementById("content");
    var allheader = document.getElementById("allheader");

    wrapdiv.style.minHeight = document.body.offsetHeight + "px";
    if (allheader != null) {
      contentdiv.style.minHeight = document.body.offsetHeight - allheader.offsetHeight - document.getElementById("footer").offsetHeight + "px";
    } else {
      contentdiv.style.minHeight = document.body.offsetHeight - document.getElementById("footer").offsetHeight + "px";
    }
</script>
